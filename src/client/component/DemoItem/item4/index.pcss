.area {
  width: 360px;
  height: 360px;
  background-color: #eee;
  text-align: center;
  &:after {
    content: ' ';
    display: inline-block;
    vertical-align: middle;
    width: 0;
    height: 100%;
  }
}

.item {
  display: inline-block;
  vertical-align: middle;
  width: 40px;
  height: 40px;
  background-color: #00bcd4;
}