.area {
  width: 280px;
  height: 280px;
  background-color: #eee;
  text-align: center;
  padding: 40px;
  font-size: 0;
}

.item {
  display: inline-block;
  width: 240px;
  height: 120px;
  background-color: #00bcd4;
  box-shadow: 0 1px 1px rgba(0, 0, 0, 0.12), 0 1px 1px rgba(0, 0, 0, 0.12);
  border-radius: 2px;
  &:first-child {
    margin-top: 20px;
  }
}